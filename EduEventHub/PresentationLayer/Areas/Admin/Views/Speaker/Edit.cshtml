@model Speaker

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Speaker/</span> Create</h4>

    <!-- Basic Layout -->
    <div class="row">
        <div class="col-xl">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Speaker</h5>
                    <small class="text-muted float-end">Create</small>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label class="form-label" for="basic-default-fullname">Name</label>
                            <input type="text" class="form-control" id="basic-default-fullname" asp-for="Name" placeholder="John Doe" />
                            <span class="text-danger" asp-validation-for="Name"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="Bio">Bio</label>
                            <input type="text" class="form-control" id="Bio" placeholder="ACME Inc." asp-for="Bio" />
                            <span class="text-danger" asp-validation-for="Bio"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="Specialization">Specialization</label>
                            <input type="text" class="form-control" id="Specialization" placeholder="Programming." asp-for="Specialization" />
                            <span class="text-danger" asp-validation-for="Specialization"></span>
                        </div>
                        <div class="mb-3">
                            <label for="formFile" class="form-label">Image</label>
                            <input class="form-control" type="file" id="formFile" asp-for="ImgPath" value="@Model.ImgPath" onchange="previewImage(event)" />
                            @if (!string.IsNullOrEmpty(Model.ImgPath))
                            {
                                <img id="imagePreview" src="~/@Model.ImgPath" class="img-thumbnail mt-2" style="max-height: 200px;" />
                            }
                            else
                            {
                                <img id="imagePreview" src="#" class="img-thumbnail mt-2" style="display:none; max-height: 200px;" />
                            }
                            <span class="text-danger" asp-validation-for="ImgPath"></span>
                        </div>

                        <button type="submit" class="btn btn-primary">Edit</button>
                    </form>
                </div>
            </div>
        </div>



    </div>
    

</div>

<script>
    function previewImage(event) {
        const input = event.target;
        const preview = document.getElementById('imagePreview');

        if (input.files && input.files[0]) {
            const reader = new FileReader();
            reader.onload = function (e) {
                preview.src = e.target.result;
                preview.style.display = 'block';
            };
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>